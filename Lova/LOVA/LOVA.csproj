    <None Remove="Resources\Volkhov-Bold.ttf" />
    <None Remove="Resources\Volkhov-Regular.ttf" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\icomoon.ttf" />
